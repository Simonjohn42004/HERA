<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginactivities.surveyactivities.surveyquestions.Question1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/questionNumber1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="200dp"
        android:text="What is your current age?"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionNumber1"
        android:id="@+id/answerNumber1"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_text_view"
        android:hint="In Years"
        android:inputType="number"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"/>



</RelativeLayout>