<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:background="#D9D8D8"
    android:layout_height="match_parent"
    tools:context=".loginactivities.homepageactivities.homepagefragments.trackpagefragments.fragments.pcodtrackpagecalenderfragment.PCODFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            android:background="@color/white"
            android:id="@+id/calenderCardView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/calendarLinearLayout"
                android:background="@color/white"
                android:layout_gravity="center">

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabTextColor="@color/white"
                    app:tabIndicatorColor="@color/white"
                    app:tabIndicatorAnimationMode="elastic"
                    android:id="@+id/trackPagePCODPageCalenderTimelineTabLayout"
                    android:background="@drawable/custom_tab_layout"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:background="@drawable/splash_screen_backgrouond"
                    android:layout_height="wrap_content"
                    android:id="@+id/trackPagePCODPageViewPager2"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calenderCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_gravity="center">




                <FrameLayout

                    android:layout_width="300dp"
                    android:layout_height="350dp"
                    android:layout_gravity="center">


                    <cjh.WaveProgressBarlibrary.WaveProgressBar
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:behind_wave_color="@color/primary_variant1"
                        app:front_wave_color="@color/primary_variant3"
                        app:progress="60"
                        app:text_size="25dp"
                        android:layout_gravity="center"
                        app:arc_color="#D9D8D8"
                        app:wave_duration="2000"
                        android:id="@+id/progressBar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="Tasks Completed"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/pcosModelresult"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="100dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/baseline_check_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Survey"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="100dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:drawableEndCompat="@drawable/baseline_check_24" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:textColor="@color/black"
                            android:text="Active Tasks"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fix Appointment"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:id="@+id/fixAppointmentButton"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/foodActivityButton"
                    android:text="Know about your Food"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/exerciseActivityButton"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Know about your Exercise"
                    android:textSize="20sp"
                    android:textStyle="bold" />





            </LinearLayout>

        </ScrollView>

    </RelativeLayout>



</LinearLayout>

