<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginactivities.homepageactivities.homepagefragments.connectpagefragments.ConnectMainFragment">

    <!-- Scrollable Container -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Inner Layout for ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title or Heading -->
            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="Health Dashboard"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- GridView to display metrics with images -->
            <GridView
                android:id="@+id/healthGrid"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:gravity="center"
                android:horizontalSpacing="16dp"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:verticalSpacing="16dp" />

            <TextView
                android:id="@+id/connectionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:text="Current status: Disconnected"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Health Tips Section -->
            <TextView
                android:id="@+id/tipTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Health Tip of the Day"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tipSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Stay hydrated and maintain an active lifestyle."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Sync Status Section -->
            <TextView
                android:id="@+id/syncStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Last Synced: 5 minutes ago"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Doctor Appointment Section -->
            <TextView
                android:id="@+id/appointmentTitle"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Next Doctor Appointment"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appointmentDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="No appointments at the moment."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Data Report Download Button -->
            <Button
                android:id="@+id/downloadReportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primary_variant3"
                android:padding="16dp"
                android:text="Download Health Report"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



